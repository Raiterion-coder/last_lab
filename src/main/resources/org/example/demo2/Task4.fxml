<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demo2.Task4Controller">
    <!-- Display TextField -->
    <TextField fx:id="display" editable="false" GridPane.columnSpan="4" GridPane.rowIndex="0" />

    <!-- Row 1 -->
    <Button onAction="#appendDigit" prefHeight="32.0" prefWidth="29.0" text="1" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Button onAction="#appendDigit" prefHeight="30.0" prefWidth="31.0" text="2" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button onAction="#appendDigit" prefHeight="30.0" prefWidth="30.0" text="3" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Button onAction="#chooseOperation" prefHeight="28.0" prefWidth="31.0" text="+" GridPane.columnIndex="3" GridPane.rowIndex="1" />

    <!-- Row 2 -->
    <Button onAction="#appendDigit" prefHeight="30.0" prefWidth="32.0" text="4" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button onAction="#appendDigit" prefHeight="29.0" prefWidth="30.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button onAction="#appendDigit" prefHeight="30.0" prefWidth="30.0" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button onAction="#chooseOperation" prefHeight="29.0" prefWidth="27.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />

    <!-- Row 3 -->
    <Button onAction="#appendDigit" prefHeight="33.0" prefWidth="31.0" text="7" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button onAction="#appendDigit" prefHeight="29.0" prefWidth="30.0" text="8" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button onAction="#appendDigit" prefHeight="30.0" prefWidth="31.0" text="9" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Button onAction="#chooseOperation" prefHeight="27.0" prefWidth="27.0" text="*" GridPane.columnIndex="3" GridPane.rowIndex="3" />

    <!-- Row 4 -->
    <Button onAction="#appendDigit" prefHeight="32.0" prefWidth="32.0" text="0" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button onAction="#clear" prefHeight="30.0" prefWidth="30.0" text="C" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Button onAction="#calculate" prefHeight="29.0" prefWidth="32.0" text="=" GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <Button onAction="#chooseOperation" prefHeight="29.0" prefWidth="27.0" text="/" GridPane.columnIndex="3" GridPane.rowIndex="4" />

    <!-- Row 5 (new row for decimal point) -->
    <Button onAction="#appendDigit" prefHeight="27.0" prefWidth="26.0" text="." GridPane.columnIndex="0" GridPane.rowIndex="5" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
